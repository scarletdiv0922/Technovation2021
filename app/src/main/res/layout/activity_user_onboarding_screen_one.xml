<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_onboarding_s1"
    tools:context=".UserOnboardingScreenOne">

    <Button
        android:id="@+id/btnnext1"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="28dp"
        android:background="#6DEDD1"
        android:fontFamily="@font/bitter"
        android:onClick="next1Clicked"
        android:shadowColor="#d7f4ffff"
        android:text="@string/nextbtn"
        android:textAllCaps="false"
        android:textColor="#283953"
        android:textColorHint="#d7f4ffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btncontinue2"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="28dp"
        android:background="#6DEDD1"
        android:fontFamily="@font/bitter"
        android:onClick="skipClicked"
        android:shadowColor="#d7f4ffff"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="#283953"
        android:textColorHint="#d7f4ffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>